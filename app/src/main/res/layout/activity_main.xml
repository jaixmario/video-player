<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter video URL"
        android:layout_margin="16dp"
        android:inputType="textUri" />

    <Button
        android:id="@+id/btnPlayUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play URL"
        android:layout_below="@id/editTextUrl"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnShowMetadata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Metadata"
        android:layout_toEndOf="@id/btnPlayUrl"
        android:layout_alignTop="@id/btnPlayUrl"
        android:layout_marginStart="16dp" />

    <org.videolan.libvlc.util.VLCVideoLayout
        android:id="@+id/vlcVideoLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/btnPlayUrl"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textAudioInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Tracks:"
        android:layout_below="@id/vlcVideoLayout"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <Spinner
        android:id="@+id/spinnerTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAudioInfo"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/textMetadata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metadata will appear here"
        android:layout_below="@id/spinnerTracks"
        android:layout_margin="16dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</RelativeLayout>